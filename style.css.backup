    background: linear-gradient(to right, #667eea 0%, #764ba2 100%);
    border-radius: 10px;
    outline: none;
    opacity: 0.8;
    transition: opacity 0.2s;
}

#corridor-year-input:hover {
    opacity: 1;
}

#corridor-year-input::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
